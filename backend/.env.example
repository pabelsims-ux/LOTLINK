# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
CORS_ORIGIN=*

# Database (Postgres)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=lotolink
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=lotolink_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE_PLAYS=plays_queue
RABBITMQ_DLQ=plays_dlq

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# HMAC for Banca Integration
HMAC_SECRET=your_hmac_secret_here
HMAC_TIMESTAMP_TOLERANCE_SECONDS=120

# Banca Mock (for testing)
MOCK_BANCA_URL=http://localhost:4000
MOCK_BANCA_CLIENT_ID=mock_client
MOCK_BANCA_SECRET=mock_secret
